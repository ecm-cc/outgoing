<th class="mdc-data-table__header-cell mdc-data-table__header-cell--with-sort" role="columnheader" scope="col"
    aria-sort="none" data-column-id="{{title}}">
    <div class="mdc-data-table__header-cell-wrapper">
        <div class="mdc-data-table__header-cell-label">
            {{title}}
        </div>
        <button class="mdc-icon-button material-icons mdc-data-table__sort-icon-button" aria-label="Sortiere {{title}}"
            aria-describedby="{{title}}-status-label">arrow_upward</button>
        <div class="mdc-data-table__sort-status-label" aria-hidden="true" id="{{title}}-status-label">
        </div>
    </div>
</th>